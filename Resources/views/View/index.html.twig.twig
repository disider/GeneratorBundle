{% autoescape false %}
{% block extends %}
    {{ "{% extends 'DisideGeneratorBundle::two-columns.html.twig' %}" }}
{% endblock extends %}

{% block body %}
{{ "{% block main_content %}" }}

    <h2>
        {{ "{{ ('entity.title.list')|trans({'%entity%': '" ~ entity ~ "'}) }} " }}

        <a href="{{ "{{ path('" ~ route_prefix ~ "_new') }}" }}"
           class="pull-right btn btn-sm btn-primary">{{ "{{ icon('plus') }} {{ 'actions.create'|trans }}" }}</a>
    </h2>

    {% if filters %}
        <form method="get" action="{{ "{{ path('" ~ route_prefix|pluralize ~ "') }}" }}">
            <div class="well">
                <div class="row">
                    {%- for field in fields %}
                        <div class="col-sm-3">{{ "{{ form_row(form." ~ field.name ~ ") }}" }}</div>
                    {%- endfor %}
                    {{  '{{ form_rest(form) }}' }}
                    <div class="col-sm-3">
                        <input class="btn btn-primary" type="submit" name="submit" value="{{ "{{ 'actions.filter'|trans }}" }}"/>
                        <a class="btn btn-default" href="{{ "{{ path('" ~ route_prefix|pluralize ~ "') }}" }}">{{ "{{ 'actions.reset'|trans }}" }}</a>
                    </div>
                </div>
            </div>
        </form>
    {% endif %}

    <div class="panel panel-default">
        <table class="table table-striped">
            <thead>
                <tr>
                    {%- for field in fields %}
                    <th>{{ "{{ 'fields." ~ field.name ~ "'|trans }}" }}</th>
                    {%- endfor %}
                    <th>{{ "{{ 'actions.title'|trans }}" }}</th>
                </tr>
            </thead>
            <tbody>
                {{ " {% for entity in pagination %}" }}
                <tr class="{{ route_prefix|replace('_', '-') }}">
            {% for field in fields %}

                {% if field.type == 'date' or field.type == 'datetime' %}
            <td class="{{ field.name }}">{{ "{{ entity." ~ field.name ~ "|date('m/d/Y') }}"}}</td>
                {% else %}
            <td class="{{ field.name }}">{{ "{{ entity." ~ field.name ~ " }}"}}</td>
                {% endif %}
            {% endfor %}
            <td class="text-center">
                        <a class="btn btn-sm btn-default"
                           href="{{ "{{ path('"~route_prefix ~ "_edit', {'id': entity.id }) }}" }}">{{ "{{ icon('pencil') }}" }}</a>
                        <a class="btn btn-sm btn-danger"
                           href="{{ "{{ path('"~route_prefix ~ "_delete', {'id': entity.id }) }}" }}">{{ "{{ icon('trash') }}" }}</a>
                    </td>
                </tr>
                {{ "{% endfor %}" }}
            </tbody>
        </table>

        <div class="navigation pull-right">
            {{ "{{ knp_pagination_render(pagination) }}" }}
        </div>

    </div>

{{ "{% endblock main_content %}" }}

{% endblock body %}
{% endautoescape %}
